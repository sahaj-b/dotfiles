---
import Layout from "../layouts/Layout.astro";
import Skills from "../SKILL.md";
import skillsRaw from "../SKILL.md?raw";
import { CopyButton } from "../ui/copy-button";
---

<Layout>
  <div
    class="bg-parchment-50 relative flex min-h-dvh flex-col items-center justify-end px-0 sm:px-4"
  >
    <div
      class="pointer-events-none absolute inset-0 mask-t-from-60% mask-t-to-100% mask-b-from-80% mask-b-to-100%"
      aria-hidden="true"
    >
      <svg class="h-full w-full" xmlns="http://www.w3.org/2000/svg">
        <defs>
          <pattern
            id="small-grid"
            width="10"
            height="10"
            patternUnits="userSpaceOnUse"
          >
            <path
              d="M 10 0 L 0 0 0 10"
              fill="none"
              stroke="#78716c"
              stroke-opacity="0.1"
              stroke-width="0.5"></path>
          </pattern>
          <pattern
            id="grid"
            width="50"
            height="50"
            patternUnits="userSpaceOnUse"
          >
            <rect width="50" height="50" fill="url(#small-grid)"></rect>
            <path
              d="M 50 0 L 0 0 0 50"
              fill="none"
              stroke="#78716c"
              stroke-opacity="0.2"
              stroke-width="1"></path>
          </pattern>
        </defs>
        <rect width="100%" height="100%" fill="url(#grid)"></rect>
      </svg>
    </div>

    <div class="mt-20 w-full max-w-3xl sm:px-0">
      <div class="mx-auto flex w-full flex-col gap-16">
        <div class="px-4 sm:px-0">
          <h1 class="text-parchment-900 text-3xl font-medium tracking-tight">
            UI Skills
          </h1>
          <p class="text-parchment-600 mt-3 text-lg">
            Opinionated constraints for building better interfaces with agents.
          </p>
        </div>

        <div>
          <h2
            class="text-parchment-900 mb-3 px-4 text-lg font-medium tracking-tight sm:px-0"
          >
            Installation
          </h2>
          <div
            class="relative flex items-center justify-between rounded-none border-t border-b border-neutral-200 bg-white py-3.5 pr-4 pl-6 shadow-2xs sm:rounded-[8px] sm:border-none sm:ring-1 sm:ring-black/10"
          >
            <code class="font-mono text-[15px]">
              <span class="text-[#953800]">curl</span>
              <span class="text-[#0550ae]"> -fsSL</span>
              <span class="text-[#0a3069]"> https://ui-skills.com/install</span>
              <span class="text-[#cf222e]"> |</span>
              <span class="text-[#953800]"> bash</span>
            </code>
            <div class="flex items-center gap-1">
              <CopyButton
                content="curl -fsSL https://ui-skills.com/install | bash"
                showText={false}
                className="size-8"
                client:load
                data-s-event="install"
              />
            </div>
          </div>
          <p class="text-parchment-500 mt-3 px-4 text-[15px] sm:px-0">
            Support Claude Code, Cursor, OpenCode and more.
          </p>
        </div>

        <div>
          <h2
            class="text-parchment-900 mb-3 px-4 text-lg font-medium tracking-tight sm:px-0"
          >
            Usage
          </h2>
          <div
            class="relative flex items-center justify-between rounded-none border-t border-b border-neutral-200 bg-white py-3.5 pr-4 pl-6 shadow-2xs sm:rounded-[8px] sm:border-none sm:ring-1 sm:ring-black/10"
          >
            <code class="font-mono text-[15px]">
              <span class="text-[#953800]">/ui-skills</span>
              <span class="text-parchment-400"> review src/</span>
            </code>
            <div class="flex items-center gap-1">
              <CopyButton
                content="/ui-skills review src/"
                showText={false}
                className="size-8"
                client:load
              />
            </div>
          </div>
        </div>

        <div
          class="relative w-full max-w-3xl rounded-none border-t border-b border-neutral-200 bg-white py-3.5 pt-6 pr-4 pl-6 shadow-2xs sm:rounded-[8px] sm:border-none sm:shadow-2xs sm:ring-1 sm:ring-black/10"
        >
          <div class="sticky top-0 right-0">
            <div class="absolute top-0 right-0">
              <CopyButton
                content={skillsRaw}
                client:load
                data-s-event="install"
              />
            </div>
          </div>
          <div
            class="prose prose-neutral prose-headings:text-balance prose-headings:font-medium prose-headings:text-[15px] prose-h1:mt-0 prose-h1:mb-6 prose-h1:text-[18px] prose-h2:mt-8 prose-h2:mb-3 prose-p:my-3 prose-p:font-normal prose-p:text-[14px] prose-p:text-parchment-600 prose-p:text-pretty prose-ul:my-3 prose-li:my-1.5 prose-li:pl-0 prose-li:font-normal prose-li:text-[14px] prose-li:text-parchment-600 prose-li:marker:text-parchment-300 max-w-none font-mono"
          >
            <div class="text-parchment-400 mb-8 text-[14px]">
              <div>---</div>
              <div>name: ui-skills</div>
              <div>
                description: Opinionated constraints for building better
                interfaces with agents.
              </div>
              <div>---</div>
            </div>
            <Skills />
          </div>
        </div>

        <footer
          class="text-parchment-400 flex w-full items-center justify-center gap-3 px-4 pb-32 text-center text-base font-medium sm:px-0"
        >
          <a
            href="https://github.com/ibelick/ui-skills"
            target="_blank"
            rel="noopener noreferrer"
            class="hover:text-parchment-900"
          >
            GitHub
          </a>
          <span class="text-parchment-200">·</span>
          <a
            href="https://platform.claude.com/docs/en/agents-and-tools/agent-skills/overview?utm_source=ui-skills.com"
            target="_blank"
            rel="noopener noreferrer"
            class="hover:text-parchment-900"
          >
            Claude Skills
          </a>
          <span class="text-parchment-200">·</span>
          <a href="/llms.txt" class="hover:text-parchment-900"> llms.txt </a>
        </footer>
      </div>
    </div>
  </div>
</Layout>
