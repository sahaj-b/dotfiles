{
  "$schema": "https://opencode.ai/config.json",
  "permission": {
    "bash": {
      "git": "ask",
      "git *": "ask"
    }
  },
  "plugin": [
    "@franlol/opencode-md-table-formatter@latest",
    "@mohak34/opencode-notifier@latest"
  ],
  "autoupdate": true,
  "layout": "stretch",
  "keybinds": {
    "messages_half_page_up": "ctrl+u",
    "messages_half_page_down": "ctrl+d"
  },
  "agent": {
    "research": {
      "prompt": "{file:./prompts/research.md}",
      "description": "Does in-depth research by aggressively searching the web",
      "mode": "all",
      "color": "#caf480",
      "permission": {
        "*": "allow",
        "edit": "deny",
        "bash": "ask",
        "kernel*": "allow",
        "kernel": "allow"
      },
      "tools": {
        "kernel*": true,
      }
    },
    // "raw": {
    //   "prompt": "",
    //   "tools": {
    //     "write": true,
    //     "edit": true,
    //     "bash": true
    //   }
  },
  "mcp": {
    "kernel": {
      "type": "remote",
      "url": "https://mcp.onkernel.com/mcp",
    },
    "tavily": {
      "type": "local",
      "enabled": true,
      "command": [
        "pnpm",
        "dlx",
        "tavily-mcp@latest"
      ]
    },
    "context7": {
      "type": "local",
      "enabled": true,
      "command": [
        "pnpm",
        "dlx",
        "@upstash/context7-mcp@latest"
      ]
    }
  },
  "tools": {
    "kernel*": false,
  },
  "permission": {
    "kernel*": "deny"
  },
}
