{
  "$schema": "https://opencode.ai/config.json",
  "permission": {
    "bash": {
      "git": "ask",
      "git *": "ask"
    }
  },
  "autoupdate": true,
  "layout": "stretch",
  "keybinds": {
    "messages_half_page_up": "ctrl+u",
    "messages_half_page_down": "ctrl+d"
  },
  "agent": {
    "raw": {
      "prompt": "",
      "tools": {
        "write": true,
        "edit": true,
        "bash": true
      }
    }
  },
  "mcp": {
    "tavily": {
      "type": "local",
      "enabled": true,
      "command": [
        "pnpm",
        "dlx",
        "tavily-mcp@latest"
      ]
    },
    "context7": {
      "type": "local",
      "enabled": true,
      "command": [
        "pnpm",
        "dlx",
        "@upstash/context7-mcp@latest"
      ]
    }
  },
}
